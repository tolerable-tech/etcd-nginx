{{#components}}{{#configured}}
upstream {{ name }} {
{{#upstreams}}
  server {{.}};
{{/upstreams}}
}

{{#ssl_redirect}}{{#vhosts}}server {
  listen 80;
  server_name {{ . }};

  location / {
    proxy_set_header X-Forwarded-Proto https;
    rewrite ^ https://$server_name$request_uri? break;
  }
}
{{/vhosts}}{{/ssl_redirect}}
{{#ssl_redirect}}server {
  listen 443 ssl;
  include /etc/nginx/ssl.conf;
  ssl_certificate_key     /etc/acme/{{$maindomain}}/privkey.key;
  ssl_certificate         /etc/acme/{{$maindomain}}/cert.cer;
  ssl_trusted_certificate /etc/acme/{{$maindomain}}/ca_cert.cer;{{end}}
{{/ssl_redirect}}
{{^ssl_redirect}}server {
  listen 80;
{{/ssl_redirect}}
  server_name {{name_list}};

  location / {
    proxy_set_header   X-Real-IP        $remote_addr;
    proxy_set_header   X-Forwarded-For  $proxy_add_x_forwarded_for;
    proxy_set_header   X-Forwarded-Proto $scheme;
    proxy_set_header   Host             $host;
    proxy_pass http://{{name}};
  }
}
{{/configured}}{{/components}}
